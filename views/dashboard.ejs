<div class="main">
  <div class="row">
    <div class="col-sm-8"><h1>Fundraisers in Progress</h1></div>
    <div class="col-sm-4"><h1><button class="btn1"><a href="/form" style="color: white;">Add a Plan</a></button><button  class="btn1"><a href="/sessionlogout" style="color: white;">Logout</a></button></h1></div>
  </div>
  <% if (typeof data != 'undefined') { %>
    <% if (data != '') { %>
       
      <ul class="cards">
      <% data.forEach(function(datas){ %>
        
        <% if (datas.amount != datas.received) { %>
          <li class="cards_item">
            <div class="card">
              <div class="card_image"><img src="/images/d1.jpg"></div>
              <div class="card_content">
                <h2 class="card_title"><%= datas.name %></h2>
                <p class="card_text"> <b> Description: </b><%=datas.comment %></p>
                <p class="card_text"><b> Budget: </b><%=datas.amount %></p>
                <p class="card_text"><b> Received: </b><%=datas.received %></p>
                
                
                  <button type="submit" class="btn card_btn"><a href="/dashboard/more?desc=<%=datas.comment %>" class="new"> <b>Read More</b></a> </button>
               
              </div>
            </div>
          </li>
          
          <% } %>
        <% }) %>
      </ul>
      
      <%} else { %>
        <p>No Plans Avaliable</p>
        <% } %>
      <% } %>
    
    <!-- <h5>Somalia High School</h5> -->
    
    <h1>Fulfilled Plans</h1>
