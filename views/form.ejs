<link href="/css/form/form.css" rel="stylesheet" type="text/css" >


<div class="container">
    <header class="header">
      <h1 id="title" class="text-center">Application Form</h1>
      <p id="description" class="description text-center">
        Lets together raise the heights of education
      </p>
    </header>
    <form id="survey-form" action="/add" method="POST">
      <div class="form-group">
        <label id="name-label" for="name">School Name</label>
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          placeholder="Enter school name"
          required
        />
      </div>
      <div class="form-group">
        <label id="email-label" for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          placeholder="Enter school Email"
          required
        />
      </div>
      <div class="form-group">
        <label id="number-label" for="number"
          >Contact</label>
        <input
          type="text"
          name="contact"
          id="number"
          class="form-control"
          placeholder="Contact Number"
          required
        />
      </div>
      <div class="form-group">
        <label id="address-label" for="address">School Address</label>
        <input
          type="text"
          name="address"
          id="address"
          class="form-control"
          placeholder="Enter school address"
          required
        />
      </div>
      <div class="form-group">
        <label id="amount-label" for="amount"
          >How much amount do you want to raise?<span class="clue">(in USD)</span></label
        >
        <input
          type="text"
          name="amount"
          id="amount"
          class="form-control"
          placeholder="Enter amount"
          required
        />
      </div>
      <div class="form-group">
        <p>Country</p>
        <select id="dropdown" name="role" class="form-control" required>
          <option disabled selected value>Select country</option>
          <option value="somalia">Somalia</option>
          <option value="kenya">Kenya</option>
          <option value="zambia">Zambia</option>
          <option value="angola">Angola</option>
          <option value="uganda">Uganda</option>
        </select>
      </div>
  
      
  
      <div class="form-group">
        <p>
          What would you like to see improved?
          <span class="clue">(Check all that apply)</span>
        </p>
  
        <label
          ><input
            name="prefer"
            value="infrastructure"
            type="checkbox"
            class="input-checkbox"
          />Infrastructure</label
        >
        <label>
          <input
            name="prefer"
            value="quality"
            type="checkbox"
            class="input-checkbox"
          />Quality of Teaching</label
        >
        <label
          ><input
            name="prefer"
            value="labs"
            type="checkbox"
            class="input-checkbox"
          />Labs</label
        >
        
  
      <div class="form-group">
        <p>Plan Description</p>
        <textarea
          id="comments"
          class="input-textarea"
          name="comment"
          placeholder="Enter your description here..."
          required
        ></textarea>
      </div>
  
      <div class="form-group">
        <button type="submit" id="submit" class="submit-button">
          Submit
        </button>
      </div>
    </form>
  </div>
  

  