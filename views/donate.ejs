<link href="/css/dashboard/dashboard.css" rel="stylesheet" type="text/css" >

<div class="main">
    <h1>Fundraisers in Progress</h1>
    <p><b>Sice we use Blockchain for transaction you can send money to people directly without a middleman. Hence this platform is very reliable and safe</b></p>
      <% if (typeof data != 'undefined') { %>
        <% if (data != '') { %>
          <% var i=0 %>
          <ul class="cards">
          <% data.forEach(function(datas){ %>
            <% i=i+1 %>
            <% if (datas.amount != datas.received) { %>
              <li class="cards_item">
                <div class="card">
                  <div class="card_image"><img src="/images/<%= i %>.jpg"></div>
                  <div class="card_content">
                    <h2 class="card_title"><%= datas.name %></h2>
                    <p class="card_text"> <b> Description: </b><%=datas.comment %></p>
                    <p class="card_text"><b> Budget: </b><%=datas.amount %></p>
                    <p class="card_text"><b> Received: </b><%=datas.received %></p>
                    <button type="submit" class="btn card_btn"><a href="/donate/more?desc=<%=datas.comment %>" class="new"> <b>Read More</b></a> </button>
                  </div>
                </div>
              </li>
              
              <% } %>
            <% }) %>
          </ul>
          
          <%} else { %>
            <p>No Plans Avaliable</p>
            <% } %>
          <% } %>
        
      
  </div>
  
